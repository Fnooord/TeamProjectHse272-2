<Window x:Class="TeamProject272_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="460" Width="700" MinHeight="460" MinWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <DataGrid Margin="5" Grid.RowSpan="7" Name="dataGridMain"/>
        <Button Name="Add" Margin="5" Grid.Column="1" Height="60" Width="110" Click="Add_Click">Add</Button>
        <Button Name="Delete" Margin="5" Grid.Column="2" Grid.Row="2" Click="Delete_Click">Delete</Button>
        <Button Name="Edit" Margin="5" Grid.Column="1" Grid.Row="1" Click="Edit_Click">Edit</Button>
        <Button Name="Save" Margin="5" Grid.Column="1" Grid.Row="5" Width="110" Height="60" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="Save_Click">Save</Button>
    </Grid>
</Window>
